@model ExemploRelatorio.Models.Consulta

@{
    ViewData["Title"] = "Imprimir";    
}

<h1>Impressão Consulta</h1>

<div>   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Medico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Medico.MedicoNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Paciente.NomePaciente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataConsulta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataConsulta)
        </dd>
    </dl>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                <h6>Medicamento</h6>
            </th>
            <th>
                <h6>Posologia</h6>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Prescricao)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Medicamento.MedicamentoNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Posologia)
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ConsultaId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
