@model ExemploRelatorio.Models.Consulta

@{
    ViewData["Title"] = "Details";    
}

<h1>Details</h1>

<div>
    <h4>Consulta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Medico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Medico.MedicoId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Paciente.PacienteId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataConsulta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataConsulta)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr> 
            <th>
               <h6>Medicamento</h6>
            </th>
            <th>
                <h6>Posologia</h6>
            </th>  
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Prescricao)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Medicamento.MedicamentoNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Posologia)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ConsultaId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
